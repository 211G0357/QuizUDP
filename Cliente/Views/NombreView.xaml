<UserControl x:Class="Cliente.Views.NombreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cliente.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#FF121212">
        <Border Background="#FF1E1E1E" CornerRadius="15" Margin="40" Padding="30" 
                BorderThickness="1" BorderBrush="#FF333333">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="8" Color="#AA000000" Opacity="0.8" BlurRadius="15"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">

                <!-- Título -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="✏️" FontSize="20" Foreground="#FFFFD700" Margin="0,0,8,0"/>
                    <TextBlock Text="INGRESA TU NOMBRE" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="#FFFFD700"
                               FontFamily="Segoe UI"/>
                </StackPanel>

                <!-- Campo de texto -->
                <TextBox Text="{Binding Respuesta.nombre, UpdateSourceTrigger=PropertyChanged}" 
                         FontSize="16" 
                         Padding="12"
                         Background="#FF252525" 
                         Foreground="White" 
                         BorderBrush="#FF444444" 
                         BorderThickness="1"
                         HorizontalContentAlignment="Center"
                         FontFamily="Segoe UI"
                         CaretBrush="#FFFFD700"
                         Margin="0,0,0,15">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="BorderBrush" Value="#FFFFD700"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#FFFFD700"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Título -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="✏️" FontSize="20" Foreground="#FFFFD700" Margin="0,0,8,0"/>
                    <TextBlock Text="INGRESA LA IP DEL SERVIDOR" 
                  FontSize="18" 
                  FontWeight="SemiBold" 
                  Foreground="#FFFFD700"
                  FontFamily="Segoe UI"/>
                </StackPanel>

                <!-- Campo de texto -->
                <TextBox Text="{Binding IP, UpdateSourceTrigger=PropertyChanged}" 
            FontSize="16" 
            Padding="12"
            Background="#FF252525" 
            Foreground="White" 
            BorderBrush="#FF444444" 
            BorderThickness="1"
            HorizontalContentAlignment="Center"
            FontFamily="Segoe UI"
            CaretBrush="#FFFFD700"
            Margin="0,0,0,15">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="BorderBrush" Value="#FFFFD700"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#FFFFD700"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Botón -->
                <Button Command="{Binding ContinuarCommand}" 
                        Content="COMENZAR QUIZ" 
                        Width="220" Height="45" 
                        FontSize="16" 
                        FontWeight="SemiBold"
                        Background="#FFFFD700" 
                        Foreground="#FF222222" 
                        BorderThickness="0" 
                        Cursor="Hand" 
                        Margin="0,10,0,0"
                        FontFamily="Segoe UI"
                        Padding="5">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="5" Color="#AA000000" Opacity="0.6" BlurRadius="8"/>
                    </Button.Effect>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFFFE500"/>
                                    <Setter Property="Foreground" Value="#FF111111"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>