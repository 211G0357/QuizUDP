<UserControl x:Class="Cliente.Views.NombreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cliente.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="SaddleBrown">
        <Border Background="Bisque" CornerRadius="10" Margin="20" Padding="20" BorderThickness="1" BorderBrush="RosyBrown">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Ingresa tu nombre para responder:" FontSize="16"  Foreground="Brown" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Respuesta.nombre, UpdateSourceTrigger=PropertyChanged}" 
                         Width="200" Margin="5" FontSize="14"
                         Foreground="White" Background="Brown" BorderBrush="#FF007ACC" 
                         BorderThickness="1" Padding="5"/>
                <Button Command="{Binding ContinuarCommand}" Content="Comenzar" 
                        Width="200" Margin="0,20,0,0" FontSize="16" 
                        Background="SaddleBrown" Foreground="White"
                        BorderBrush="#FF005A9E" Padding="10" Cursor="Hand">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="3" Color="Black" Opacity="0.3" BlurRadius="5"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>