<UserControl x:Class="Servidor.Views.Puntuaciones"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Servidor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Bisque">
        <StackPanel Margin="20">
            <TextBlock Text="DATOS FINALES" FontSize="24" TextAlignment="Center" Margin="30" Foreground="SaddleBrown" FontWeight="Heavy"/>

            <ListBox ItemsSource="{Binding Alumnos}" Background="RosyBrown" BorderThickness="0" Padding="15" Width="500" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="{Binding NombreCompleto}" Width="300" FontSize="16" Foreground="White"/>
                            <TextBlock Text="{Binding Puntuacion}" FontSize="16" Foreground="#FF00CC99" FontWeight="Bold" Margin="10,0,0,0"/>
                            <ItemsControl ItemsSource="{Binding Respuestas}" Margin="10,0,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" Foreground="White" Margin="5,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Content="Regresar a Quiz" Command="{Binding RegresarCommand}"  Width="200" Margin="0,20,0,0" FontSize="16" Background="SaddleBrown" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>


</UserControl>