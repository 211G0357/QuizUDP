<UserControl x:Class="Servidor.Views.Quiz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Servidor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="570" d:DesignWidth="800">

    <Grid Background="#FF121212">
      
        <Border Background="#FF1E1E1E" CornerRadius="15" Margin="30" Padding="25" 
                BorderThickness="2" BorderBrush="#FF333333">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="8" Color="#AA000000" Opacity="0.8" BlurRadius="15"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="600">

                <!-- Pregunta -->
                <TextBlock Text="{Binding Pregunta.Enunciado}" 
                           FontSize="24" 
                           TextWrapping="Wrap" 
                           TextAlignment="Center" 
                           Foreground="#FFFFD700" 
                           FontWeight="SemiBold" 
                           FontFamily="Segoe UI"
                           Margin="0,0,0,20"/>

                <!-- Opciones -->
                <ItemsControl ItemsSource="{Binding Pregunta.Opciones}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FF252525" 
                                    CornerRadius="10" 
                                    Margin="5,5,5,0" 
                                    Padding="15" 
                                    Cursor="Hand"
                                    BorderBrush="#FF444444"
                                    BorderThickness="1">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF333333"/>
                                                <Setter Property="BorderBrush" Value="#FFFFD700"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding}" 
                                           FontSize="18" 
                                           Foreground="White" 
                                           HorizontalAlignment="Center"
                                           FontFamily="Segoe UI"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <!-- Tiempo restante -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="{Binding TiempoRestante}" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="#FFFFD700"
                               FontFamily="Segoe UI"/>
                </StackPanel>
                <Image Source="/quiz-time-colorful-typography-design-with-question-marks-bubbles-png.png" Height="150px" Margin="0,20"></Image>
                <!-- Botón de inicio -->
                <!--<TextBlock Text="{Binding endpointId}"--> 
        
                <Button Content="INICIAR QUIZ" 
                        Command="{Binding IniciarCommand}" 
                        Width="220" Height="50" 
                        Background="#FFFFD700" 
                        Foreground="#FF222222" 
                        FontSize="18" 
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand" 
                        Margin="0,25,0,0"
                        FontFamily="Segoe UI"
                        Padding="5">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="5" Color="#AA000000" Opacity="0.6" BlurRadius="8"/>
                    </Button.Effect>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFFFE500"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
               
            </StackPanel>
        </Border>
    </Grid>
</UserControl>