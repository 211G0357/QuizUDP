<UserControl x:Class="Servidor.Views.Quiz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Servidor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="RosyBrown" >
        <Border Background="Bisque" CornerRadius="30" Margin="20" Padding="20" BorderThickness="1" BorderBrush="SandyBrown">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" Color="Black" Opacity="0.5" BlurRadius="10"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="{Binding Pregunta.Enunciado}" FontSize="24" TextAlignment="Center" Margin="10" Foreground="White" FontWeight="Bold"/>
                <ItemsControl ItemsSource="{Binding Pregunta.Opciones}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FF3E3E42" CornerRadius="5" Margin="5" Padding="10">
                                <TextBlock Text="{Binding}" FontSize="16" Foreground="White" HorizontalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock Text="{Binding TiempoRestante}" FontSize="24" Foreground="Brown" HorizontalAlignment="Center" Margin="10" FontWeight="Bold"/>
                <Button Content="Iniciar" Command="{Binding IniciarCommand}" Margin="10" FontSize="20" Background="RosyBrown" Foreground="White" BorderBrush="#FF005A9E" Padding="10" HorizontalAlignment="Center" Width="150" Cursor="Hand">
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="3" Color="Black" Opacity="0.3" BlurRadius="5"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>